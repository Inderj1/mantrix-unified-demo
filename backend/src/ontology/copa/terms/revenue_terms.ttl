@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix copa: <http://mantrix.ai/ontology/copa#> .
@prefix mantrix: <http://mantrix.ai/ontology#> .

# ============================================================================
# COPA Terms: Revenue-Related
# ============================================================================

copa:term_revenue a mantrix:SemanticTerm ;
    rdfs:label "revenue" ;
    skos:altLabel "sales" , "top line" , "turnover" , "gross sales" , "net sales" , "total revenue" ;
    mantrix:disambiguation """In COPA:
  'revenue' → SUM(Gross_Revenue) or SUM(Net_Sales)
  'gross sales' / 'total sales' → SUM(Gross_Sales)
  'net sales' / 'net revenue' → SUM(Net_Sales)
  Use Net_Sales for margin calculations (after deductions).
  Use Gross_Sales for top-line volume.""" .

copa:term_sales a mantrix:SemanticTerm ;
    rdfs:label "sales" ;
    skos:altLabel "revenue" , "bookings" ;
    mantrix:disambiguation "'sales' in COPA = revenue, not sales orders. For order count: COUNT(DISTINCT Sales_Order). For revenue: SUM(Gross_Sales) or SUM(Net_Sales)." .
