@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix copa: <http://mantrix.ai/ontology/copa#> .
@prefix mantrix: <http://mantrix.ai/ontology#> .

copa:metric_revenue_per_customer a mantrix:Metric ;
    rdfs:label "Revenue per Customer" ;
    rdfs:comment "Average revenue per unique customer. Measures customer value." ;
    skos:altLabel "ARPC" , "average revenue per customer" , "customer value" ;
    mantrix:sqlFormula "SUM(Gross_Revenue) / COUNT(DISTINCT Sold_to_Name)" ;
    mantrix:exampleSQL "SELECT SUM(Gross_Revenue) / COUNT(DISTINCT Sold_to_Name) as arpc FROM dataset_25m_table" .
