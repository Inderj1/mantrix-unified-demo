# AWS Configuration
aws_region   = "us-east-1"
environment  = "production"
project_name = "mantrix-madison"
domain_name  = "madisonreed.cloudmantra.ai"

# EC2 Instance Configuration
instance_type     = "t3.medium"  # 2 vCPU, 4GB RAM
root_volume_size  = 30           # GB

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# SSH Configuration
key_name            = "mantrix-madison-key"
ssh_public_key_path = "~/.ssh/id_rsa.pub"
ssh_user            = "ubuntu"

# Security
allowed_ssh_cidrs = ["0.0.0.0/0"]  # Restrict this to your IP for better security

# DNS (optional)
use_route53     = false
route53_zone_id = ""  # If using Route53, provide the hosted zone ID for cloudmantra.ai
