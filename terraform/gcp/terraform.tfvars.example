# GCP Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Machine Type
# e2-medium  = 2 vCPU, 4GB RAM (~$30/month) - Recommended
# e2-small   = 2 vCPU, 2GB RAM (~$15/month) - Minimal
# e2-standard-2 = 2 vCPU, 8GB RAM (~$60/month) - More headroom
machine_type = "e2-medium"

# SSH Configuration
ssh_user             = "ubuntu"
ssh_public_key_path  = "~/.ssh/id_rsa.pub"

# DNS Configuration (optional)
use_cloud_dns = false
dns_zone_name = ""
